local BOOST_ROOT = [ modules.peek : BOOST_ROOT ] ;

use-project /libx : ../libx/src ;

project program
    : requirements 
        <include>$(BOOST_ROOT)
        <threading>multi
        <library>/qt3//qt    
        <hardcode-dll-paths>true
        <stdlib>stlport
        <use>/libx
        <library>/libx//libx
           
 : usage-requirements 
        <include>$(BOOST_ROOT)
        : 
        default-build release
        <threading>multi
        <library>/qt3//qt
        <hardcode-dll-paths>true
        ;

build-project main ;

