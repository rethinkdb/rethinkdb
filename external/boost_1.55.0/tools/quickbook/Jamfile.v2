# Install quickbook by default.

install dist-bin
    :
    src//quickbook
    :
    <install-type>EXE
    <location>../../dist/bin
    :
    release
    ;

# Target for quickbook toolset's auto build.

alias quickbook
    : src//quickbook
    : release
    ;

explicit quickbook
    ;
