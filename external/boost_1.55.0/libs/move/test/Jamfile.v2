rule test_all
{
   local all_rules = ;

   for local fileb in [ glob *.cpp ]
   {
      all_rules += [ run $(fileb)
      :  # additional args
      :  # test-files
      :  # requirements
      ] ;
   }

   return $(all_rules) ;
}

test-suite move_test : [ test_all r ] 
: <link>static
;
 
