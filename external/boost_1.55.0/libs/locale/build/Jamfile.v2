                            <link>shared
                            <runtime-link>shared ;

    searched-lib icuin : :  <toolset>msvc
                            <variant>debug
                            <name>icuind
                            <search>$(ICU_PATH)/lib
                            <link>shared
                            <runtime-link>shared ;

    searched-lib icuin : :  <toolset>msvc
                            <variant>release
