                            <runtime-link>shared ;

    searched-lib icudt : :  <search>$(ICU_PATH)/lib
                            <name>icudt
                            <toolset>msvc
                            <link>shared
                            <runtime-link>shared ;

    searched-lib icudt : :  <name>this_is_an_invalid_library_name ;

    searched-lib icuin : :  <search>$(ICU_PATH)/lib
