# Generates preprocessed files with wave.

actions wave
{
  $(>[2]) -o- -DBOOST_PROTO_MAX_ARITY=10 --config-file wave.cfg $(>[1])
}

W = ../../../tools/wave/build//wave ;

make preprocess_proto
  : preprocess_proto.cpp $(W) : wave
  ;
