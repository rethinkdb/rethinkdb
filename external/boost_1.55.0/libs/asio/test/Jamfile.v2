import os ;
import feature ;

if [ os.name ] = SOLARIS
{
  lib socket ;
  lib nsl ;
}
else if [ os.name ] = NT
{
  lib ws2_32 ;
  lib mswsock ;
}
else if [ os.name ] = HPUX
{
  lib ipv6 ;
}
else if [ os.name ] = QNXNTO
{
  lib socket ;
}

local USE_SELECT =
  <define>BOOST_ASIO_DISABLE_DEV_POLL
