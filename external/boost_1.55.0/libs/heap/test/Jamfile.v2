import testing ;

rule test_all
{
   local all_rules = ;

   for local fileb in [ glob *.cpp ]
   {
       all_rules += [ run $(fileb) ../../test/build//boost_unit_test_framework/<link>static
      :  # additional args
      :  # test-files
      : <library>/boost/test//boost_unit_test_framework # requirements
      ] ;
   }

    return $(all_rules) ;
}

test-suite heap : [ test_all r ] : <threading>multi ;
