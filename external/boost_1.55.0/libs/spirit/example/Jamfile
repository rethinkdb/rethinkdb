# build all examples

local examples = [ glob-tree [jJ]amfile [jJ]amfile.v2 ] ;

for local ex in $(examples) {
   local dir = $(ex:P) ;
   if $(dir) != "" && $(dir) != "." {
      build-project $(dir) ;
   }
}

